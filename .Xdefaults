rofi.font:              Source Code Pro Light 12
rofi.modi:              drun
rofi.show-icons:        true
rofi.hide-scrollbar:    true
rofi.fake-transparency: false
rofi.bw:                1
rofi.fullscreen:        false
rofi.separator-style:   solid
rofi.color-enabled: true
!                  'background',  'border'
rofi.color-window: argb:95000000, #ff4500
! State:           'bg',         'fg',    'bgalt',       'hlbg',   'hlfg'
rofi.color-normal: argb:00000000, #ffffff, argb:00000000, #ffffff, #000000
rofi.color-urgent: argb:00000000, #ffffff, argb:00000000, #ffffff, #000000
rofi.color-active: argb:00000000, #ffffff, argb:00000000, #ffffff, #000000

URxvt.termName:    rxvt
URxvt.font:        xft:Source Code Pro Light:size=12, xft:FontAwesome:size=12, xft:Symbola:size=12
URxvt.letterSpace: -1
URxvt.depth:       32
URxvt.scrollBar:   false
URxvt.letterSpace: 0

! special
*.foreground:      #ffffff
*.background:      [50]#000000
*.cursorColor:     #ff4500
*.cursorUnderline: true
*.cursorBlink:     false

! black
*.color0:       #000000
*.color8:       #5c5855

! red
*.color1:       #db2d20
*.color9:       #db2d20

! green
*.color2:       #01a252
*.color10:      #01a252

! yellow
*.color3:       #fded02
*.color11:      #fded02

! blue
*.color4:       #01a0e4
*.color12:      #01a0e4

! magenta
*.color5:       #a16a94
*.color13:      #a16a94

! cyan
*.color6:       #b5e4f4
*.color14:      #b5e4f4

! white
*.color7:       #ffffff
*.color15:      #ffffff

! Clickable and Yankable URLs (Alt+u)
URxvt.perl-ext: default,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

