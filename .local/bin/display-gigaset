#!/bin/sh
xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x120 --rotate normal --output DP1 --off --output DP1-1 --off --output DP1-2 --mode 1920x1200 --pos 1920x0 --rotate normal --output DP1-3 --off --output DP2 --off --output HDMI1 --off --output HDMI2 --off --output VIRTUAL1 --off

xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x120 --rotate normal --output DP1 --off --output DP1-1 --off --output DP1-2 --mode 1920x1200 --pos 1920x0 --rotate normal --output DP1-3 --mode 1920x1200 --pos 3840x0 --rotate normal --output DP2 --off --output HDMI1 --off --output HDMI2 --off --output VIRTUAL1 --off
